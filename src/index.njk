<script>
    const startDate = new Date('2024-04-25T00:00:00');
    const endDate = new Date('2026-02-07T12:00:00');
    const diffMs = endDate - startDate;

    const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    const hours = Math.floor(diffMs / (1000 * 60 * 60));
    const minutes = Math.floor(diffMs / (1000 * 60));
    const seconds = Math.floor(diffMs / 1000);

    const weeks = (days / 7).toFixed(1);
    const months = (days / 30.44).toFixed(1);
    const years = (days / 365.25).toFixed(1);

    document.getElementById('days-counter').textContent = days.toLocaleString();
    document.getElementById('hours-counter').textContent = hours.toLocaleString();
    document.getElementById('minutes-counter').textContent = minutes.toLocaleString();
    document.getElementById('seconds-counter').textContent = seconds.toLocaleString();
    document.getElementById('weeks-counter').textContent = weeks;
    document.getElementById('months-counter').textContent = months;
    document.getElementById('years-counter').textContent = years;

    // Confetti celebration
    const container = document.getElementById('confetti-container');
    const colors = ['#f472b6', '#fb7185', '#f43f5e', '#e879f9', '#c084fc', '#60a5fa', '#34d399'];
    for (let i = 0; i < 40; i++) {
        const span = document.createElement('span');
        span.style.left = Math.random() * 100 + 'vw';
        span.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        span.style.animationDuration = (Math.random() * 3 + 3) + 's';
        span.style.animationDelay = (Math.random() * 5) + 's';
        span.style.width = (Math.random() * 6 + 4) + 'px';
        span.style.height = (Math.random() * 6 + 4) + 'px';
        container.appendChild(span);
    }

    // Stop confetti after a while
    setTimeout(() => {
        container.style.display = 'none';
    }, 10000);
</script>

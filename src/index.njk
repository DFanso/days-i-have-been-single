---
layout: base.njk
title: Days I've Been Single
---

{% set startDate = "2024-04-25" %}
{% set dayCount = startDate | daysSince %}

<div class="min-h-screen flex items-center justify-center p-6">
    <div class="max-w-4xl w-full">
        <!-- Terminal-style Card -->
        <div class="bg-gray-900 rounded-xl shadow-2xl overflow-hidden border border-gray-700">
            <!-- Terminal Header -->
            <div class="bg-gray-800 px-4 py-3 flex items-center gap-2 border-b border-gray-700">
                <div class="flex gap-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="ml-2 text-gray-400 text-sm font-mono">~/single-counter.sh</div>
            </div>

            <!-- Terminal Content -->
            <div class="p-8 md:p-12 font-mono text-left space-y-6">
                <!-- Command Line -->
                <div class="text-green-400">
                    <span class="text-blue-400">$</span> ./calculate-single-days.sh --since="2024-04-25"
                </div>

                <!-- Output -->
                <div class="space-y-4 text-gray-300">
                    <div class="flex items-center gap-2">
                        <span class="text-gray-500">[INFO]</span>
                        <span>Calculating days since breakup...</span>
                        <span class="inline-block w-2 h-4 bg-green-400 animate-pulse"></span>
                    </div>

                    <div class="my-8 p-6 bg-gray-800/50 border border-gray-700 rounded-lg">
                        <div class="text-center">
                            <div class="text-gray-400 text-sm mb-2">DAYS_SINGLE =</div>
                            <div class="text-6xl md:text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-500">
                                {{ dayCount }}
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-2 text-gray-400">
                        <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Start Date: <span class="text-white">April 25, 2024</span></span>
                    </div>

                    <!-- Stats Grid -->
                    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="bg-gray-800/50 border border-gray-700 rounded p-4 hover:border-cyan-500 transition-colors">
                            <div class="flex items-center gap-2 mb-3">
                                <svg class="w-4 h-4 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-xs text-gray-500 uppercase tracking-wider">const hours</div>
                            </div>
                            <div class="text-2xl font-bold text-cyan-400">{{ dayCount * 24 }}</div>
                        </div>
                        <div class="bg-gray-800/50 border border-gray-700 rounded p-4 hover:border-blue-500 transition-colors">
                            <div class="flex items-center gap-2 mb-3">
                                <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                                <div class="text-xs text-gray-500 uppercase tracking-wider">const minutes</div>
                            </div>
                            <div class="text-2xl font-bold text-blue-400">{{ dayCount * 1440 }}</div>
                        </div>
                        <div class="bg-gray-800/50 border border-gray-700 rounded p-4 hover:border-purple-500 transition-colors">
                            <div class="flex items-center gap-2 mb-3">
                                <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                                </svg>
                                <div class="text-xs text-gray-500 uppercase tracking-wider">const seconds</div>
                            </div>
                            <div class="text-2xl font-bold text-purple-400">{{ dayCount * 86400 }}</div>
                        </div>
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-6 space-y-2 text-sm">
                        <div class="text-gray-500">
                            <span class="text-gray-600">//</span> That's approximately {{ (dayCount / 7) | round(1) }} weeks or {{ (dayCount / 30.44) | round(1) }} months
                        </div>
                    </div>

                    <!-- Status Line -->
                    <div class="mt-8 pt-4 border-t border-gray-700">
                        <div class="flex items-center gap-2 text-green-400">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Status: Still going strong</span>
                        </div>
                    </div>

                    <!-- Prompt -->
                    <div class="text-green-400 flex items-center">
                        <span class="text-blue-400">$</span>
                        <span class="inline-block w-2 h-4 bg-green-400 ml-1 animate-pulse"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-6 text-center text-gray-500 text-sm font-mono flex items-center justify-center gap-2">
            <span class="text-gray-600">&lt;/&gt;</span>
            <span>with</span>
            <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <span>by</span>
            <a href="https://www.instagram.com/dfansoo/" target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:text-cyan-300 transition-colors flex items-center gap-1.5">
                <span>DFanso</span>
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
